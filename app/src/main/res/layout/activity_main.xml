<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/get_from_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/startGame"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" android:layout_marginStart="100dp" android:layout_marginEnd="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.112"/>
    <Button
            android:text="@string/generate_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/generateRandom"
            android:layout_marginEnd="200dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="180dp"
            app:layout_constraintHorizontal_bias="0.1" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/startGame" app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="@string/test_draw_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/testDrawArea"
            android:layout_marginEnd="200dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="180dp"
            app:layout_constraintHorizontal_bias="0.1" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/generateRandom" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>